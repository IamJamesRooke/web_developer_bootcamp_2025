<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <!-- Form to create a new campground -->
        <form action="/campgrounds" method="POST">
            <!-- Title input field -->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <!-- Location input field -->
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]">
            </div>
            <!-- Image URL input field -->
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]">
            </div>
            <!-- Price input field -->
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" 
                    name="campground[price]" placeholder="0.00" 
                    aria-label="Price" aria-describedby="price-label">
                </div>
            </div>
            <!-- Description textarea field -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="campground[description]"></textarea>
            </div>
            <!-- Submit button -->
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <!-- Back link -->
        <a href="/campgrounds">Back</a>
    </div>
</div>